# EditorConfig is awesome: http://EditorConfig.org

# line endings: lf (Unix), cr or crlf (DOS/Windows)
[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8

# Remove whitespace characters preceding the end of a line
trim_trailing_whitespace = true

# Files have a blank line at the end
insert_final_newline = true

[*.yml]
indent_size = 2

[lint]
indent_size = 4

[*.conf]
indent_size = 4

[*.md]
trim_trailing_whitespace = false

